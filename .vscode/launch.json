{
    "version": "0.2.0",

    "configurations": [
        {
            "name": "flow-base",
            "type": "gdb",
            "request": "launch",
            "autorun": [
                "handle SIGUSR1 nostop noprint",
                "handle SIGUSR2 nostop noprint",
                "break onInvalidMemoryOperationError"
            ],
            "target": "flow-base-test-library",
            "cwd": "${workspaceRoot}/base/lib"
        },
        {
            "name": "flow-complex-gen",
            "type": "gdb",
            "request": "launch",
            "autorun": [
                "set environment LD_LIBRARY_PATH ${workspaceRoot}/base/lib:${workspaceRoot}/run/bin/lib",
                "handle SIGUSR1 nostop noprint",
                "handle SIGUSR2 nostop noprint",
                "break onInvalidMemoryOperationError"
            ],
            "target": "flow-complex-gen",
            "cwd": "${workspaceRoot}/complex-gen/bin",
            "arguments": "power -o ${workspaceRoot}/tmp/cfg/complex/power/1 -s 1 -a 1000"
        },
        {
            "name": "flow-run",
            "type": "gdb",
            "request": "launch",
            "autorun": [
                "set environment LD_LIBRARY_PATH ${workspaceRoot}/base/lib",
                "handle SIGUSR1 nostop noprint",
                "handle SIGUSR2 nostop noprint",
                "break onInvalidMemoryOperationError"
            ],
            "target": "flow-run",
            "cwd": "${workspaceRoot}/run/bin",
            "arguments": "${workspaceRoot}/tmp/cfg/complex/power/1"
        }
    ]
}