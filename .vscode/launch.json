{
    "version": "0.2.0",

    "configurations": [
        {
            "name": "flow-core",
            "type": "gdb",
            "request": "launch",
            "autorun": [
                "handle SIGUSR1 nostop noprint",
                "handle SIGUSR2 nostop noprint",
                "break onInvalidMemoryOperationError"
            ],
            "target": "test-libflow-core",
            "cwd": "${workspaceRoot}/tst"
        },
        {
            "name": "flow-complex-gen",
            "type": "gdb",
            "request": "launch",
            "autorun": [
                "set environment LD_LIBRARY_PATH ${workspaceRoot}/lib:${workspaceRoot}/ext",
                "handle SIGUSR1 nostop noprint",
                "handle SIGUSR2 nostop noprint",
                "break onInvalidMemoryOperationError"
            ],
            "target": "flow-complex-gen",
            "cwd": "${workspaceRoot}/complex-gen/bin",
            "arguments": "power -o ${workspaceRoot}/tmp/cfg/complex/power/1 -s 1 -a 200 -f"
        },
        {
            "name": "flow-run",
            "type": "gdb",
            "request": "launch",
            "autorun": [
                "set environment LD_LIBRARY_PATH ${workspaceRoot}/core/lib",
                "handle SIGUSR1 nostop noprint",
                "handle SIGUSR2 nostop noprint",
                "break onInvalidMemoryOperationError"
            ],
            "target": "flow-run",
            "cwd": "${workspaceRoot}/run/bin",
            "arguments": "${workspaceRoot}/tmp/cfg/complex/power/1"
        }
    ]
}